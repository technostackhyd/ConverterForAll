<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical">
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_alignParentTop="true"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <!--Percentage-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg"
        android:elevation="4dp"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/l11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/layout_bg_full_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/convertTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:padding="10dp"
                android:textSize="16sp"
                android:text="@string/calcPercent"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/chelp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:maxHeight="80dp"
                android:maxWidth="80dp"
                android:minHeight="25dp"
                android:minWidth="25dp"
                android:padding="4dp"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_info_outline_black_24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/l12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <AutoCompleteTextView
                    android:id="@+id/basicValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1.5px"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:hint="1000"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="12"
                    android:padding="10dp"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:textColor="@color/dark_grey"
                    android:textColorHint="@color/grey"
                    android:textSize="18sp" />

                <AutoCompleteTextView
                    android:id="@+id/percentValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:background="@color/transparent"
                    android:gravity="center_vertical|left"
                    android:hint="25%"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:padding="10dp"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:textColor="@color/dark_grey"
                    android:textColorHint="@color/grey"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:padding="10dp"
                    android:src="@drawable/percentage" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#c0c0c0" />
            <TextView
                android:id="@+id/perResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:layout_marginTop="1px"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/dark_grey"
                android:textColorHint="@color/grey"
                />
        </LinearLayout>
    </LinearLayout>
    <!--End Percentage-->

    <!--Discount Percentage-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg"
        android:elevation="4dp"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/l21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/layout_bg_full_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/convertTitle1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:padding="10dp"
                android:textSize="16sp"
                android:text="@string/discPercent"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/dhelp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:maxHeight="80dp"
                android:maxWidth="80dp"
                android:minHeight="25dp"
                android:minWidth="25dp"
                android:padding="4dp"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_info_outline_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/l22">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/d_basicValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1.5px"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="1000"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLength="12"
                android:padding="10dp"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColor="@color/dark_grey"
                android:textColorHint="@color/grey"
                android:textSize="18sp" />

            <AutoCompleteTextView
                android:id="@+id/d_percentValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@color/transparent"
                android:gravity="center_vertical|left"
                android:hint="25%"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:padding="10dp"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColor="@color/dark_grey"
                android:textColorHint="@color/grey"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:padding="10dp"
                android:src="@drawable/percentage" />
        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#c0c0c0" />
        <TextView
        android:id="@+id/d_perResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:layout_marginTop="1px"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/dark_grey"
        android:textColorHint="@color/grey"/>
        </LinearLayout>
    </LinearLayout>
    <!--End Discount Percentage-->


    <!--Add Percentage-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg"
        android:elevation="4dp"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/l31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/layout_bg_full_color"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/convertTitle2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:padding="10dp"
                android:text="@string/addPercent"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/ahelp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:maxHeight="80dp"
                android:maxWidth="80dp"
                android:minHeight="25dp"
                android:minWidth="25dp"
                android:padding="4dp"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_info_outline_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/l32">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/a_basicValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1.5px"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="1000"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLength="12"
                android:padding="10dp"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColor="@color/dark_grey"
                android:textColorHint="@color/grey"
                android:textSize="18sp" />

            <AutoCompleteTextView
                android:id="@+id/a_percentValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@color/transparent"
                android:gravity="center_vertical|left"
                android:hint="25%"
                android:fontFamily="@font/proxima_nova_regular"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:padding="10dp"
                android:textColor="@color/dark_grey"
                android:textColorHint="@color/grey"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:padding="10dp"
                android:src="@drawable/percentage" />
        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#c0c0c0" />
        <TextView
        android:id="@+id/a_perResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:layout_marginTop="1px"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="@color/dark_grey"
        android:textSize="18sp"
        android:textColorHint="@color/grey"/>
        </LinearLayout>
    </LinearLayout>
    <!--End Add Percentage-->

    <!--Know Percentage-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg"
        android:elevation="4dp"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/l41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/layout_bg_full_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/convertTitle3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:padding="10dp"
                android:text="@string/findPercent"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/fhelp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:maxHeight="80dp"
                android:maxWidth="80dp"
                android:minHeight="25dp"
                android:minWidth="25dp"
                android:padding="4dp"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_info_outline_black_24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/l42">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginBottom="1px">
            <AutoCompleteTextView
                android:id="@+id/k_basicValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="1000"
                android:padding="10dp"
                android:inputType="numberDecimal"
                android:maxLength="12"
                android:fontFamily="@font/proxima_nova_regular"
                android:layout_marginRight="1.5px"
                android:textColor="@color/dark_grey"
                android:background="@color/transparent"
                android:textColorHint="@color/grey"
                android:textSize="18sp"
                android:imeOptions="actionDone"/>
            <AutoCompleteTextView
                android:id="@+id/k_Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="500"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:gravity="center_vertical|left"
                android:padding="10dp"
                android:maxLength="5"
                android:textColor="@color/dark_grey"
                android:background="@color/transparent"
                android:textColorHint="@color/grey"
                android:textSize="18sp"
                android:imeOptions="actionDone"/>
        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#c0c0c0" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/k_Result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:layout_weight="1"
                android:layout_marginTop="1px"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/dark_grey"
                android:background="@color/transparent"
                android:textColorHint="@color/grey" />
        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#c0c0c0" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/kd_Result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:layout_weight="1"
                android:layout_marginTop="1px"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/dark_grey"
                android:background="@color/transparent"
                android:textColorHint="@color/grey" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--End Know Percentage-->
