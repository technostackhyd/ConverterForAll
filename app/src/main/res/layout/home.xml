<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
        android:id="@+id/favLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/layout_bg_full_color_two"
                android:elevation="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="@string/favorites"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/ic_stars_black_24dp"
                    android:drawableTint="@color/white"/>
                <ImageView
                    android:id="@+id/favReorder"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:minHeight="25dp"
                    android:minWidth="25dp"
                    android:maxHeight="80dp"
                    android:maxWidth="80dp"
                    android:padding="4dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_reorder_black_24dp"
                    android:tint="@color/white"/>
            </LinearLayout>
        <include layout="@layout/home_fav_layout"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/layout_bg_full_color_two"
        android:elevation="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="@string/calculate"
            android:padding="10dp"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/calReorder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:minHeight="25dp"
            android:minWidth="25dp"
            android:maxHeight="80dp"
            android:maxWidth="80dp"
            android:padding="4dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_reorder_black_24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/white"/>
    </LinearLayout>
        <include
            layout="@layout/home_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/layout_bg_full_color_two"
        android:elevation="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="@string/convert"
            android:padding="10dp"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/conReorder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:minHeight="25dp"
            android:minWidth="25dp"
            android:maxHeight="80dp"
            android:maxWidth="80dp"
            android:padding="4dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_reorder_black_24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/white"/>
    </LinearLayout>
        <include
        layout="@layout/home_layout_con"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </include>
</LinearLayout>
</ScrollView>
</RelativeLayout>