<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_alignParentTop="true"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@drawable/layout_bg"
            android:elevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:background="@drawable/layout_bg_color">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/bmitext"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_weight="20"
                    android:layout_gravity="center"
                    android:textColor="@color/white">
                </TextView>
                <ImageView
                    android:id="@+id/help"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:minHeight="25dp"
                    android:minWidth="25dp"
                    android:maxHeight="80dp"
                    android:maxWidth="80dp"
                    android:padding="4dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_info_outline_black_24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="@color/white"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="@string/bmidesc"
                android:textColor="@color/textColor"
                android:textSize="15sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/layout_bg"
                android:elevation="3dp">
                <AutoCompleteTextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:id="@+id/value1"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:hint="0"
                    android:background="@color/transparent"
                    android:textColor="@color/dark_grey"
                    android:textColorHint="@color/grey"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:textSize="18sp"
                    android:imeOptions="actionDone"/>
                <in.technostack.projects.converterforall.SearchableSpinner
                    android:id="@+id/list1"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:textSize="14sp"
                    style="@style/SpinnerTheme"
                    tool:context="in.technostack.projects.converterforall.SearchableSpinner"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/layout_bg"
                android:elevation="3dp">
                <AutoCompleteTextView
                    android:id="@+id/value2"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="0"
                    android:textSize="18sp"
                    android:background="@color/transparent"
                    android:padding="12dp"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:textColorHint="@color/grey"
                    android:textColor="@color/dark_grey"
                    android:imeOptions="actionDone"/>
                <in.technostack.projects.converterforall.SearchableSpinner
                    android:id="@+id/list2"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:textSize="14sp"
                    style="@style/SpinnerTheme"
                    tool:context="in.technostack.projects.converterforall.SearchableSpinner"/>
            </LinearLayout>
            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:hint="@string/bmiresult"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="@string/bmisource"
                android:autoLink="web"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                android:gravity="end|center_vertical"
                android:linksClickable="true"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
        </LinearLayout>
        <!--<com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adViewBmi"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            ads:adSize="MEDIUM_RECTANGLE"
            ads:adUnitId="ca-app-pub-9058778547207041/6955408249">
        </com.google.android.gms.ads.AdView>-->
        <LinearLayout
            android:id="@+id/technoTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
